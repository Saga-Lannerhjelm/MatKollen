@model MatKollen.Models.User
@{
    ViewData["Title"] = "Registrera";
}

<h1>@ViewData["Title"]</h1>

@{
     if (TempData.ContainsKey("unsuccessful")){
        <div class="alert alert-warning mt-2" role="alert">
        @TempData["unsuccessful"]
        </div>
    }
}

<div class="d-flex justify-content-center mt-5">
  <div class="card" style="width: 50vw;">
    <div class="card-body">
        <h5 class="card-title">Skapa användare</h5>
        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Användarnamn</label>
                <input type="text" asp-for="Username" name="username" class="form-control">
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" asp-for="Email" name="email" class="form-control">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input type="password" asp-for="Password" name="password" class="form-control">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-primary" value="Skapa användare"/>
        </form>
    </div>
  </div>