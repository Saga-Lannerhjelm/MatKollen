@model MatKollen.Models.User

@{
    ViewData["Title"] = "Logga in";
}

@{
    if (TempData.ContainsKey("notLoggedIn")){
        <div class="alert alert-warning mt-2" role="alert">
        @TempData["notLoggedIn"]
        </div>
    }
}

@{
     if (TempData.ContainsKey("unsuccessful")){
        <div class="alert alert-warning mt-2" role="alert">
        @TempData["unsuccessful"]
        </div>
    }
}

<div class="d-flex justify-content-center mt-5">
  <div class="card" style="width: 50vw;">
    <div class="card-body">
        <h5 class="card-title">Logga in</h5>
        <form asp-action="Login">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Användarnamn</label>
                <input type="text" asp-for="Username" name="username" class="form-control">
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input type="password" asp-for="Password" name="password" class="form-control">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-primary" value="Logga In"/>
        </form>
        <p class="mt-2">Har du inget konto?<a asp-action="Create" asp-controller="Users"> Registrera dig!</a></p>
    </div>
  </div>
</div>