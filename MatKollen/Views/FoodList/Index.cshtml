@model List<UserFoodItemViewModel>

@{
    ViewData["Title"] = "Matvaror";
    ViewBag.criticalLevel = "";
}

<h2>@ViewData["Title"]</h2>


<div class="row row-cols-2 row-cols-md-6 g-4">
    @{
        foreach (var item in Model)
        {
            if (item.ExpirationDate.Count == 2) ViewBag.criticalLevel = "attention";
            if (item.ExpirationDate.Count == 1) ViewBag.criticalLevel = "default";

            <div class="col">
                <div class="card text-dark card-has-bg rounded-5 bg-@ViewBag.criticalLevel" style="border-radius: 1.25rem">
                    <div class="card-body">
                        <h1 class="bg-@ViewBag.criticalLevel">@item.ExpirationDate?.Count</h1>
                        <small class="card-meta mb-2">@item.Category</small>
                        <h4 class="card-title mt-0 ">@item.FoodItem</h4>
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <button class="accordion-button collapsed bg-@ViewBag.criticalLevel p-0" type="button" data-bs-toggle="collapse" data-bs-target="#@item.FoodItem">
                                        <small>Utg√•ngsdatum</small>
                                    </button>
                                </h2>
                                <div id="@item.FoodItem" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body bg-@ViewBag.criticalLevel p-0">
                                        @foreach (var date in @item.ExpirationDate)
                                        {
                                            <p class="m-0"><small>@date</small></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        }
    }
</div>

  

  
